<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.samiu.drug_directory.DetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/bottomMargin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/detail_imageView_ID"
                            android:layout_width="match_parent"
                            android:layout_height="162dp"
                            android:contentDescription="@null"
                            android:scaleType="fitXY"
                            android:layout_marginTop="4dp"
                            android:src="@mipmap/detail_image" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/deatail_tradeName_id"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="Trade name"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                android:textSize="18sp"
                                android:layout_marginTop="7dp"
                                android:layout_marginStart="20dp"/>

                            <TextView
                                android:id="@+id/detail_genericName_id"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="Generic name"
                                android:textSize="16sp"
                                android:layout_marginTop="7dp"
                                android:layout_marginStart="20dp"/>

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/detail_company_name_id"
                                android:text="Company name"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                android:textSize="16sp"
                                android:layout_marginTop="7dp"
                                android:layout_marginStart="20dp"/>


                        </LinearLayout>
                    </LinearLayout>


                </android.support.v7.widget.CardView>


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="105dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:text="Indication"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/detail_indications_id"
                    android:layout_width="351dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="105dp"
                    android:layout_height="35dp"
                    android:text="Dosage"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="22sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:id="@+id/dosage_iD"
                    android:layout_width="351dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="105dp"
                    android:layout_height="35dp"
                    android:text="Source"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="22sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp" />
                <TextView
                    android:id="@+id/source_iD"
                    android:layout_width="351dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:textSize="18sp"/>
                <!--<TextView-->
                    <!--android:id="@+id/textView7"-->
                    <!--android:layout_width="105dp"-->
                    <!--android:layout_height="35dp"-->
                    <!--android:text="Entry date"-->
                    <!--android:textAppearance="@style/TextAppearance.AppCompat.Body1"-->
                    <!--android:textSize="22sp"-->
                    <!--android:layout_marginStart="10dp"-->
                    <!--android:layout_marginTop="20dp" />-->
                <!--<TextView-->
                    <!--android:id="@+id/entryDate_iD"-->
                    <!--android:layout_width="351dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="20dp"-->
                    <!--android:layout_marginStart="10dp"-->
                    <!--android:textSize="18sp"/>-->

            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</FrameLayout>
